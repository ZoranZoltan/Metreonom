            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF00AAC5" Offset="0"/>
                    <GradientStop Color="#FF505A97" Offset="1"/>
                </LinearGradientBrush>
